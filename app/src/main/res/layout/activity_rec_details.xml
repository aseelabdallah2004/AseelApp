<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecDetailsActivity">

    <TextView
        android:id="@+id/TvNameRecDetails"
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:hint="Recipe name"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="134dp" />

    <TextView
        android:id="@+id/TvDescriptionRecDetails"
        android:layout_width="415dp"
        android:layout_height="96dp"
        android:text="Description"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="224dp" />

    <TextView
        android:id="@+id/TvIngredientsRecDetails"
        android:layout_width="407dp"
        android:layout_height="76dp"
        android:text="Ingredients"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="327dp" />

    <TextView
        android:id="@+id/TvNutritionRecDetails"
        android:layout_width="408dp"
        android:layout_height="81dp"
        android:text="Nutrition"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="421dp" />

    <TextView
        android:id="@+id/TvDietartInfoRecDetails"
        android:layout_width="407dp"
        android:layout_height="64dp"
        android:text="TvDietartInfoRec"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="502dp" />

    <TextView
        android:id="@+id/TvStepsRecDetails"
        android:layout_width="405dp"
        android:layout_height="69dp"
        android:text="Steps"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="580dp" />

    <ImageView
        android:id="@+id/IvPhotoRecDetails"
        android:layout_width="411dp"
        android:layout_height="134dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/TvCategoryRecDetails"
        android:layout_width="403dp"
        android:layout_height="34dp"
        android:text="Category"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="182dp" />

</androidx.constraintlayout.widget.ConstraintLayout>