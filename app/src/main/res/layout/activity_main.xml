<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8BFD8"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLoginMain"
        android:layout_width="87dp"
        android:layout_height="50dp"
        android:backgroundTint="#776F77"
        android:backgroundTintMode="#FFFFFF"
        android:onClick="loginn"
        android:text="log in"
        android:textColor="#FFFFFF"
        app:iconTint="#F6F5F5"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="270dp" />

    <TextView
        android:id="@+id/tvSignupLinkMain"
        android:layout_width="123dp"
        android:layout_height="43dp"
        android:text="register..."
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="320dp" />

    <Button
        android:id="@+id/btnAddRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#776F77"
        android:onClick="addRecipe"
        android:text="add recipe"
        android:textColor="#FFFFFF"
        app:iconTint="#F6F6F6"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="515dp" />

    <Button
        android:id="@+id/btnAllRestMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#776F77"
        android:onClick="allRecipes"
        android:text="All Recipes"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="515dp" />

    <EditText
        android:id="@+id/etUsernameMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="165dp" />

    <EditText
        android:id="@+id/etPasswordMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="210dp" />

</androidx.constraintlayout.widget.ConstraintLayout>