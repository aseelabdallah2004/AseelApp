<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <EditText
        android:id="@+id/erUsernameSignup"
        android:layout_width="243dp"
        android:layout_height="64dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="user name"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/etpasswordSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IvSignUp" />

    <Button
        android:id="@+id/btnLogoutSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#8591072E"
        android:onClick="signup"
        android:text="sign up"
        android:textColor="#F8F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etconfimpasswordSignup" />

    <EditText
        android:id="@+id/etconfimpasswordSignup"
        android:layout_width="237dp"
        android:layout_height="51dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="confirm password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btnLogoutSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etpasswordSignup" />

    <EditText
        android:id="@+id/etpasswordSignup"
        android:layout_width="244dp"
        android:layout_height="51dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/etconfimpasswordSignup"
        app:layout_constraintEnd_toEndOf="@+id/etconfimpasswordSignup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/erUsernameSignup"
        app:layout_constraintTop_toBottomOf="@+id/erUsernameSignup" />

    <ImageView
        android:id="@+id/IvSignUp"
        android:layout_width="521dp"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/erUsernameSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chickb" />

</androidx.constraintlayout.widget.ConstraintLayout>