<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8BFD8"
    tools:context=".SignupActivity">

    <EditText
        android:id="@+id/erUsernameSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="user name"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/etpasswordSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etpasswordSignup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/etconfimpasswordSignup"
        app:layout_constraintEnd_toEndOf="@+id/erUsernameSignup"
        app:layout_constraintStart_toStartOf="@+id/etconfimpasswordSignup"
        app:layout_constraintTop_toBottomOf="@+id/erUsernameSignup" />

    <EditText
        android:id="@+id/etconfimpasswordSignup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="confirm password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btnLogoutSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etpasswordSignup" />

    <Button
        android:id="@+id/btnLogoutSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="203dp"
        android:backgroundTint="@color/white"
        android:onClick="signup"
        android:text="sign up"
        android:textColor="#1C1B1B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etconfimpasswordSignup"
        app:layout_constraintTop_toBottomOf="@+id/etconfimpasswordSignup" />
</androidx.constraintlayout.widget.ConstraintLayout>